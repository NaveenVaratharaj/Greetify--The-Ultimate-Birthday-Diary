<%-include ("partials/header_1.ejs") %>
<div class="maindiv text-center">
  <h2 style="text-align: center">Welcome back user 👋 </h2>
  <h2 class="text-center mt-3">List of birthdays you have added! ✅✨ </h2>
  <div class="mt-3 btn btn-md btn-add btn-danger" id="login" onclick = "location.href='/compose'">Add Birthdays</div>
  <div class="mt-3 btn btn-md btn-add btn-outline-danger" id="login" onclick = "location.href='https://web.whatsapp.com/'">Open Whatsapp</div>

<% finalDetails.forEach(function(birthday){ %>
  <div class="birthday_Card"> 
    <div class=" mb-3 mt-3 d-flex justify-content-between overall_details shadow-sm p-3 mb-5 bg-body rounded">
        <div class="details bd-highlight">🤝 <%= birthday.relType%></div>
        <div class="details bd-highlight">👋 <%= birthday.person_name%></div>
        <div class="details bd-highlight">📅 <%= birthday.date.toLocaleDateString()%></div>
    </div>  
</div>
<% }) %>
</div>


